generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email String @db.VarChar(255) @unique
  password String @db.VarChar(255)
  insta_token String? @db.VarChar(255)
  refresh_id String @db.VarChar(255) @unique
  first_name String @db.VarChar(255)
  last_name String @db.VarChar(255)
  role String
  is_active Boolean @default(true)
  data Json?
  last_login_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  deleted_at DateTime?

  linkInstaFeed InstaFeed? @relation("UserInstaFeedLink")

  @@index([email])
  @@map(name: "user")
}

model InstaFeed {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id String @db.Uuid @unique
  caption String?
  feed_id String
  media_type String?
  media_url String?
  title String?
  desciption String?
  data Json?
  is_active Boolean @default(true)

  user User @relation(name: "UserInstaFeedLink", fields: [user_id], references: [id])

  created_at DateTime @default(now())
  @@map(name: "user_insta_feed")
}
